<!DOCTYPE html>

<html>
<head>
    <link asp-href-include="~/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link asp-href-include="~/css/main.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title - My Game WebSite</title>
</head>
    <body>
        @* HEADER *@
        <header>
            <div class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                   <div class="col-3">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img class="img-fluid" src="~/img/logo.png" alt="Website logo" />
                        </a>
                    </div>
                    <div>
                        <p><a asp-controller="Home" asp-action="Index">Home page</a></p>
                    </div>
                </div>
            </div>
        </header>
        <section class="mainContent d-flex align-items-center">
        @RenderBody()
        </section>
        @*FOOTER*@
        <footer>
            <div class="navbar navbar-expand-lg navbar-light bg-dark">
                <div class="container">
                    <div class="row">
                        <p>Footer</p>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>